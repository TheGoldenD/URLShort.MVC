@{
    ViewData["Title"] = "URL Shortener";
}

<form method="post" asp-controller="Url" asp-action="Shorten" class="my-form">
    <div class="form-image">
        <img src="/images/url.jpg" alt="URL Image" />
    </div>

    <h1>URL Shortener</h1>

    <div class="form-group">
        <input type="text" name="url" id="url" class="form-control" placeholder="Paste your url here, let us handle the hard part !!" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Shorten</button>

    <!-- Error messages -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <!-- Shortened URL -->
    @if (ViewBag.ShortUrl != null)
    {
        <div class="alert alert-success mt-3">
            <strong>Shortened URL:</strong>
            <a href="@ViewBag.ShortUrl" target="_blank">@ViewBag.ShortUrl</a>
            <br/>
            <strong>Revoke password:</strong>
            <a href="@ViewBag.RevokePassword">@ViewBag.RevokePassword</a>
            <br/>
            <br/>
            <strong>Remember the revoke password in case you want to delete this URL later.</strong>
            <strong>You can scan this QR to access the link</strong>
        </div>

        <div>
            <img src=@ViewBag.QRCodeImage />
        </div>
    }
</form>

<style>
    .my-form {
        background-color: rgba(255, 255, 255, 0.7);
        padding: 20px 25px;
        border-radius: 10px;
        max-width: 850px;
        margin: 0 auto;
        margin-top: calc(50vh - 335px);
        text-align: center;
    }

    .form-image {
        max-width: 100%;
        margin-bottom: 15px;
    }

    .form-image img {
            width: 100%; /* Đảm bảo ảnh không vượt quá form */
            height: auto;
            border-radius: 8px;
            object-fit: contain; /* Ảnh giữ tỉ lệ, nằm gọn */
    }

    .my-form h1 {
        margin-bottom: 20px;
    }

    .my-form label {
        display: block; /* label xuống dòng riêng */
        font-weight: 600; /* đậm vừa phải */
        font-size: 14px; /* cỡ chữ vừa phải */
        color: #6c757d; /* màu xám nhạt giống bootstrap */
        margin-bottom: 5px; /* khoảng cách nhỏ dưới label */
        text-align: left; /* căn lề trái cho dễ đọc */
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .my-form button {
        position: relative;
        overflow: hidden;
        width: 100%;
        padding: 10px 0;
        font-weight: 600;
        font-size: 16px;
        border: none;
        border-radius: 6px;
        color: white;
        background: linear-gradient(90deg, #00cca6 0%, #28587c 100%);
        cursor: pointer;
        user-select: none;
    }


</style>
