@{
    ViewData["Title"] = "URL Shortener";
}

<h2>Shorten Your URL</h2>

<!-- Form -->
<form method="post" asp-controller="Url" asp-action="Shorten" class="mb-3">
    <div class="form-group">
        <label for="url">Enter a full URL:</label>
        <input type="text" name="url" id="url" class="form-control" placeholder="https://example.com" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Shorten</button>
</form>

<!-- Error messages -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<!-- Shortened URL -->
@if (ViewBag.ShortUrl != null)
{
    <div class="alert alert-success mt-3">
        <strong>Shortened URL:</strong>
        <a href="@ViewBag.ShortUrl" target="_blank">@ViewBag.ShortUrl</a>
    </div>
}
