@{
    ViewData["Title"] = "URL Revoke";
}

<form method="post" asp-controller="Url" asp-action="Revoke" class="my-form">
    <div class="form-image">
        <img src="/images/url.jpg" alt="URL Image" />
    </div>

    <h1>URL Revoke</h1>

    <div class="form-group">
        <input type="text" name="shortenedUrl" id="shortUrl" class="form-control" placeholder="Enter short URL here" required />
    </div>

    <div class="form-group mt-3">
        <input type="text" name="revokePassword" id="revokePassword" class="form-control" placeholder="Enter revoke password" required />
    </div>

    <button type="submit" class="btn btn-primary mt-4">Revoke</button>

    <!-- Error messages -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <!-- Success message -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success mt-3">
            @ViewBag.Message
        </div>
    }
</form>

<style>
    .my-form {
        background-color: rgba(255, 255, 255, 0.7);
        padding: 20px 25px;
        border-radius: 10px;
        max-width: 700px;
        margin: 0 auto;
        margin-top: calc(50vh - 340px);
        text-align: center;
    }

    .form-image {
        max-width: 100%;
        margin-bottom: 15px;
    }

        .form-image img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            object-fit: contain;
        }

    .my-form h1 {
        margin-bottom: 20px;
    }

    .my-form label {
        display: block;
        font-weight: 600;
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 5px;
        text-align: left;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .my-form button {
        position: relative;
        overflow: hidden;
        width: 100%;
        padding: 10px 0;
        font-weight: 600;
        font-size: 16px;
        border: none;
        border-radius: 6px;
        color: white;
        background: linear-gradient(90deg, #00cca6 0%, #28587c 100%);
        cursor: pointer;
        user-select: none;
    }
</style>
