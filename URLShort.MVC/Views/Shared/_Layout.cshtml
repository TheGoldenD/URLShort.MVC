<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/URLShort.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark topbar">
            <div class="container-fluid d-flex justify-content-center">
                <div class="nav-links d-flex gap-5">
                    <a asp-area="" asp-controller="Url" asp-action="Shorten"
                       class="nav-link @(ViewData["Title"]?.ToString() == "URL Shortener" ? "active" : "")">
                        <i class="fa-solid fa-scissors"></i> URL Shorten
                    </a>
                    <a asp-area="" asp-controller="Url" asp-action="Revoke"
                       class="nav-link @(ViewData["Title"]?.ToString() == "URL Revoke" ? "active" : "")">
                        <i class="fa-solid fa-trash"></i> URL Revoke
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" id="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Footer-->
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            2025 - URLShort.MVC
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- CSS -->
    <style>
        /* Body background */
        body {
            background: url('/images/xanh.gif') center center fixed;
            background-size: cover;
            background-repeat: no-repeat;
            margin: 0;
        }

        /* Thanh top */
        .topbar {
            background-color: rgba(107, 120, 115, 0.9);
            padding: 10px;
        }

        /* Link trong navbar */
        .nav-links .nav-link {
            color: white;
            font-size: 18px;
            padding: 8px 12px;
            position: relative;
            text-decoration: none;
        }

            .nav-links .nav-link:hover {
                color: white;
            }

            /* Active underline */
            .nav-links .nav-link.active::after {
                content: "";
                position: absolute;
                bottom: 0;
                left: 0;
                height: 3px;
                width: 100%;
                background-color: white;
            }

        footer {
            text-align: center;
        }
    </style>
</body>
</html>
